services:
  vaultwarden:
    image: vaultwarden/server:latest@sha256:84fd8a47f58d79a1ad824c27be0a9492750c0fa5216b35c749863093bfa3c3d7
    container_name: vaultwarden
    restart: always
    ports:
      - "127.0.0.1:{{ services.vaultwarden.port }}:80"
    volumes:
      - "{{ vaultwarden_data_dir }}/data:/data"
    environment:
      DOMAIN: "https://{{ services.vaultwarden.domain }}"
      SIGNUPS_ALLOWED: "{{ vaultwarden_signups_allowed }}"
      SMTP_HOST: "{{ smtp_host }}"
      SMTP_PORT: "{{ smtp_port }}"
      SMTP_SECURITY: "starttls"
      SMTP_FROM: "{{ no_reply_mail }}"
      SMTP_USERNAME: "{{ no_reply_mail }}"
      SMTP_PASSWORD: "{{ smtp_password }}"
