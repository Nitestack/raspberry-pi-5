services:
  vaultwarden:
    image: vaultwarden/server:latest
    container_name: vaultwarden
    restart: always
    ports:
      - "127.0.0.1:{{ VAULTWARDEN_PORT }}:80"
    volumes:
      - "{{ vaultwarden_dir }}/data:/data"
    environment:
      DOMAIN: "{{ VAULTWARDEN_URL }}"
      SIGNUPS_ALLOWED: "{{ VAULTWARDEN_SIGNUPS_ALLOWED }}"
    labels:
      glance.name: Vaultwarden
      glance.icon: si:vaultwarden
      glance.url: {{ VAULTWARDEN_URL }}
      glance.hide: false
