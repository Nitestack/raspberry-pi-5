# external-file: https://raw.githubusercontent.com/seanmorley15/AdventureLog/main/docker-compose.yml
# digest: 7e64a0d8af98601950afb5802ac71263ff1073445ad94931b423a233ea1d0eff

services:
  web:
    image: ghcr.io/seanmorley15/adventurelog-frontend:latest@sha256:eeff34a4a7d8e9b0942c257fd7a50d47b3adbe141c7eba78df36cd3b441c0eaf
    container_name: "{{ services.adventure_log.frontend_container_name }}"
    restart: always
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

  db:
    image: ghcr.io/baosystems/postgis:16-3.5@sha256:dfc954fa9e432d03e711e22d10bf8a7eafbcf2ca6c4427d1a832418ba3042b3d # until postgis/postgis on DockerHub supports linux/arm64
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/db:/var/lib/postgresql/data/"
    env_file:
      - .env
      - .env.override

  server:
    image: ghcr.io/seanmorley15/adventurelog-backend:latest@sha256:280e768c736555b2488b9d7d3e211587906f4d190e9ea25e78e5b69747e76433
    container_name: "{{ services.adventure_log.backend_container_name }}"
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/data:/code/media/"
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

networks:
  caddy:
    external: true
