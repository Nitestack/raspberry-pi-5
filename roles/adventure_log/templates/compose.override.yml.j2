services:
  web:
    image: ghcr.io/seanmorley15/adventurelog-frontend:latest@sha256:a6abed853f443e68ce4b26c5d1fcf93f7b5028d4daea1cbf059c0456d3a83f57
    container_name: "{{ services.adventure_log.container_names.frontend }}"
    restart: always
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

  db:
    image: ghcr.io/baosystems/postgis:16-3.5@sha256:7bb38e249b8c4fc1b58cee7770965f73b632f60f7cf363bf16ffef372e6943bc # until postgis/postgis on DockerHub supports linux/arm64
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/db:/var/lib/postgresql/data/"
    env_file:
      - .env
      - .env.override

  server:
    image: ghcr.io/seanmorley15/adventurelog-backend:latest@sha256:25e2a971dc4cfa63baa3b3da5f6761a7df3a43eb965cc655e859729ee1201bad
    container_name: "{{ services.adventure_log.container_names.backend }}"
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/data:/code/media/"
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

networks:
  caddy:
    external: true
