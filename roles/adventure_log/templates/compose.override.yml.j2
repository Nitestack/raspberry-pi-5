# digest: 7e64a0d8af98601950afb5802ac71263ff1073445ad94931b423a233ea1d0eff

services:
  web:
    image: ghcr.io/seanmorley15/adventurelog-frontend:latest@sha256:eeff34a4a7d8e9b0942c257fd7a50d47b3adbe141c7eba78df36cd3b441c0eaf
    restart: always
    env_file:
      - .env
      - .env.override

  db:
    image: ghcr.io/baosystems/postgis:17-3.5@sha256:bdf0e6db1702d22716d77f0b2d1891ab22cc032fec76d261d73efc9efdfde671 # until postgis/postgis on DockerHub supports linux/arm64
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/db:/var/lib/postgresql/data/"
    env_file:
      - .env
      - .env.override

  server:
    image: ghcr.io/seanmorley15/adventurelog-backend:latest@sha256:280e768c736555b2488b9d7d3e211587906f4d190e9ea25e78e5b69747e76433
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/data:/code/media/"
    env_file:
      - .env
      - .env.override
