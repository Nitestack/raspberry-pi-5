services:
  web:
    image: ghcr.io/seanmorley15/adventurelog-frontend:latest@sha256:32f7ea8f99da78ee77ff1729018549b2a5cd4fec1d34a8a237b05f4d3f33da70
    restart: always
    env_file:
      - .env
      - .env.override

  db:
    image: ghcr.io/baosystems/postgis:16-3.5@sha256:0d390f7658da9d48b176aa5a00ef291b618261cd28ed1d39c1858d7191b8ecaa # until postgis/postgis on DockerHub supports linux/arm64
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/db:/var/lib/postgresql/data/"
    env_file:
      - .env
      - .env.override

  server:
    image: ghcr.io/seanmorley15/adventurelog-backend:latest@sha256:1b67bf6732046b4b82b96c0e2dfad65fcf8684cd07ce9cfed422b484e562b3b5
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/data:/code/media/"
    env_file:
      - .env
      - .env.override
