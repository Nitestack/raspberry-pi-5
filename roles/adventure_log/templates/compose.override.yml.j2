services:
  web:
    image: ghcr.io/seanmorley15/adventurelog-frontend:latest@sha256:852759049c3d9b73fb8b8b8f64aab3c091c217ab0500cc2c1676a634a146e079
    container_name: "{{ services.adventure_log.container_names.frontend }}"
    restart: always
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

  db:
    image: ghcr.io/baosystems/postgis:16-3.5@sha256:8ff55c11acbf8c0d841423bc9d02324798f5bea1f5e8475691c9dfa03a868a19 # until postgis/postgis on DockerHub supports linux/arm64
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/db:/var/lib/postgresql/data/"
    env_file:
      - .env
      - .env.override

  server:
    image: ghcr.io/seanmorley15/adventurelog-backend:latest@sha256:25e2a971dc4cfa63baa3b3da5f6761a7df3a43eb965cc655e859729ee1201bad
    container_name: "{{ services.adventure_log.container_names.backend }}"
    restart: always
    volumes:
      - "{{ adventure_log_data_dir }}/data:/code/media/"
    env_file:
      - .env
      - .env.override
    ports: !reset []
    networks:
      - default
      - caddy

networks:
  caddy:
    external: true
