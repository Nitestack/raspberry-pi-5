services:
  ghostfolio:
    image: ghostfolio/ghostfolio:2.213.0@sha256:3b8a1b5c83e6d4cf6e818d2db79edc2655b22472583cc39f64ef8a4c86358993
    container_name: "{{ services.ghostfolio.container_name }}"
    restart: always
    networks:
      - default
      - caddy
    env_file: !override .env
    ports: !reset []

  postgres:
    image: postgres:15-alpine@sha256:64583b3cb4f2010277bdd9749456de78e5c36f8956466ba14b0b96922e510950
    container_name: "ghostfolio-postgres"
    restart: always
    env_file: !override .env
    volumes:
      - "{{ ghostfolio_data_dir }}/db:/var/lib/postgresql/data"

  redis:
    image: redis:alpine@sha256:59b6e694653476de2c992937ebe1c64182af4728e54bb49e9b7a6c26614d8933
    container_name: "ghostfolio-redis"
    restart: always
    env_file: !override .env

networks:
  caddy:
    external: true
