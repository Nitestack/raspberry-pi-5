services:
  ghostfolio:
    image: ghostfolio/ghostfolio:2.244.0@sha256:93c2da035348edab8c26dcdcd45d579f58006626e79e5dcf46d27d193a58e834
    container_name: "{{ services.ghostfolio.container_name }}"
    restart: always
    networks:
      - default
      - caddy
    env_file: !override .env
    ports: !reset []

  postgres:
    image: postgres:15-alpine@sha256:fceb6f86328c36f2438fae3b851b0cc57c4a7e69a58c866d9ce24281f2cf0c9c
    container_name: "ghostfolio-postgres"
    restart: always
    env_file: !override .env
    volumes:
      - "{{ ghostfolio_data_dir }}/db:/var/lib/postgresql/data"

  redis:
    image: redis:alpine@sha256:2afba59292f25f5d1af200496db41bea2c6c816b059f57ae74703a50a03a27d0
    container_name: "ghostfolio-redis"
    restart: always
    env_file: !override .env

networks:
  caddy:
    external: true
