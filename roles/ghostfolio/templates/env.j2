COMPOSE_PROJECT_NAME=ghostfolio

# CACHE
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{ ghostfolio_redis_password }}

# POSTGRES
POSTGRES_DB=ghostfolio-db
POSTGRES_USER=user
POSTGRES_PASSWORD={{ ghostfolio_db_password }}

# VARIOUS
ACCESS_TOKEN_SALT={{ ghostfolio_salt }}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?connect_timeout=300&sslmode=prefer
JWT_SECRET_KEY={{ ghostfolio_jwt_secret }}

# OIDC
ROOT_URL=https://{{ services.ghostfolio.domain }}
ENABLE_FEATURE_AUTH_OIDC={{ sso_enabled | lower }}
OIDC_CLIENT_ID={{ ghostfolio_oidc_client_id }}
OIDC_CLIENT_SECRET={{ ghostfolio_oidc_client_secret }}
OIDC_ISSUER=https://{{ services.pocket_id.domain }}
