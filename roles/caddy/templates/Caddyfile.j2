(protected) {
	@blocked not remote_ip {$PUBLIC_IP}
	error @blocked 403

	handle_errors 403 {
		rewrite * /403.html
		file_server {
			root /etc/caddy/errors
		}
	}
}

{% for service in services.values() %}
{{ service.domain }} {
{% set proxy_type = service.caddy_proxy_type | default('simple') %}
{% if proxy_type == "simple" %}
	reverse_proxy localhost:{{ service.port }}
{% elif proxy_type == "vaultwarden" %}
	encode zstd gzip
	reverse_proxy localhost:{{ service.port }} {
		header_up X-Real-IP {remote_host}
	}
{% elif proxy_type == "adventure_log" %}
	@frontend {
		not path /media* /admin* /static* /accounts*
	}
	reverse_proxy @frontend localhost:{{ service.frontend_port }}
	reverse_proxy localhost:{{ service.backend_port }}
{% elif proxy_type == "beszel" %}
	request_body {
		max_size 10MB
	}
	reverse_proxy localhost:{{ service.port }} {
		transport http {
			read_timeout 360s
		}
	}
{% elif proxy_type == "nextcloud" %}
	header Strict-Transport-Security max-age=31536000;
	reverse_proxy localhost:{{ service.port }}
{% endif %}
}
{% endfor %}
