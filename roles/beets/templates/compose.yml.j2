services:
  beets:
    image: linuxserver/beets:2.6.2@sha256:ce126fa5fa8157cdd603624bf93959eceb7844085bd527da062ef7d16f166b60
    container_name: beets
    restart: always
    environment:
      PUID: "{{ ansible_user_uid }}"
      PGID: "{{ ansible_user_gid }}"
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
