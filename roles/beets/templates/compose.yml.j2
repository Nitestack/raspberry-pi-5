services:
  beets:
    image: linuxserver/beets:2.6.1@sha256:647b1d2d0e740a4894251366f50953cfe0b623555e1dbc0dc59f788f33d22979
    container_name: beets
    restart: always
    environment:
      PUID: "{{ ansible_user_uid }}"
      PGID: "{{ ansible_user_gid }}"
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
