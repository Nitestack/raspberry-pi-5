services:
  beets:
    image: linuxserver/beets:2.6.1@sha256:6391c5aac14322aafdb2b85506ff9e568cc04222f0d344f6b2e797cf8d4e5aec
    container_name: beets
    restart: always
    environment:
      PUID: "{{ ansible_user_uid }}"
      PGID: "{{ ansible_user_gid }}"
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
