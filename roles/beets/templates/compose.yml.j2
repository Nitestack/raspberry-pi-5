services:
  beets:
    image: linuxserver/beets:2.5.1@sha256:2a69e61dbaf12edffd8d28b40c1961a2b8982d761ad2716f18424ebef132c3d2
    container_name: beets
    restart: always
    environment:
      PUID: 1000
      PGID: 1000
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
