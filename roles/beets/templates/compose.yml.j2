services:
  beets:
    image: linuxserver/beets:2.6.1@sha256:a594373a27727eff2d6328af17055baeb53af907579b7e3ad0bad45556f7f148
    container_name: beets
    restart: always
    environment:
      PUID: "{{ ansible_user_uid }}"
      PGID: "{{ ansible_user_gid }}"
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
