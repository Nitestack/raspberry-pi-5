services:
  beets:
    image: linuxserver/beets:2.6.1@sha256:0d8087b8d352ae047cf11df9a87cb89bad691c49c7c9734607bbc2a1a371e901
    container_name: beets
    restart: always
    environment:
      PUID: "{{ ansible_user_uid }}"
      PGID: "{{ ansible_user_gid }}"
      TZ: "{{ timezone }}"
    volumes:
      - "{{ beets_data_dir }}/config:/config"
      - "{{ music_library_dir }}:/music"
      - "{{ rdtclient_data_dir }}/downloads:/downloads"
