services:
  nextcloud:
    image: nextcloud/all-in-one:latest
    container_name: nextcloud-aio-mastercontainer
    restart: always
    ports:
      - "8080:8080"
    volumes:
      - nextcloud_aio_mastercontainer:/mnt/docker-aio-config
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      APACHE_PORT: 11000
      APACHE_IP_BINDING: 127.0.0.1
      NEXTCLOUD_DATADIR: /mnt/data/nextcloud/data
    networks:
      - nextcloud-aio
    depends_on:
      - caddy

  caddy:
    image: caddy:latest
    container_name: nextcloud-aio-caddy
    restart: always
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - ./caddy_config:/config
      - ./caddy_data:/data
      - ./caddy_certs:/certs
      - ./caddy_sites:/srv
    environment:
      EMAIL: "{{ ACME_EMAIL }}"
      DOMAIN: "{{ NEXTCLOUD_URL }}"
    network_mode: host

networks:
  nextcloud-aio:
    enable_ipv6: true

volumes:
  nextcloud_aio_mastercontainer:
    name: nextcloud_aio_mastercontainer
