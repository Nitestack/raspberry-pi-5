services:
  museum:
    image: ghcr.io/ente-io/server:latest@sha256:980f69321bdda48b91fb86ce54a3060051a3c8da596e7dbea98488c190accac7
    container_name: "{{ services.ente_api.container_name }}"
    restart: always
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - default
      - caddy
    volumes:
      - "{{ ente_auth_service_dir }}/museum.yml:/museum.yaml:ro"
      - "{{ ente_auth_data_dir }}/data:/data:ro"
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:8080/ping"]
      interval: 60s
      timeout: 5s
      retries: 3
      start_period: 120s

  web:
    image: ghcr.io/ente-io/web:latest@sha256:d94960db98078aecb6c80fd719e34dbcc4b63434d37447433e11217eaba28b5c
    container_name: "{{ services.ente_auth.container_name }}"
    restart: always
    networks:
      - default
      - caddy
    environment:
      ENTE_API_ORIGIN: "https://{{ services.ente_api.domain }}"

  postgres:
    image: postgres:15@sha256:a7711af921c380de0fda7c48a61fab5ac4def145fd9fc00ccea7355fd6270bb4
    container_name: ente-postgres
    restart: always
    environment:
      POSTGRES_USER: "{{ ente_db_user }}"
      POSTGRES_PASSWORD: "{{ ente_db_password }}"
      POSTGRES_DB: "{{ ente_db_name }}"
    healthcheck:
      test: pg_isready -q -d {{ ente_db_name }} -U {{ ente_db_user }}
      start_period: 40s
      start_interval: 1s
    volumes:
      - "{{ ente_auth_data_dir }}/db:/var/lib/postgresql/data"

networks:
  caddy:
    external: true
