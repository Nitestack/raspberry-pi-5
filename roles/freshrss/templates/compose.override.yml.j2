services:
  freshrss:
    image: freshrss/freshrss:1.28.0@sha256:5664f42e37e7101c824806d8f73cbc97c8f406ce043bbdb8d39d4ff1e7f2ad11
    container_name: "{{ services.freshrss.container_name }}"
    restart: always
    networks:
      - caddy
    volumes:
      - "{{ freshrss_data_dir }}/data:/var/www/FreshRSS/data"
      - "{{ freshrss_data_dir }}/extensions:/var/www/FreshRSS/extensions"
    environment:
      TZ: "{{ timezone }}"
      CRON_MIN: "3,33"
      TRUSTED_PROXY: !reset null

networks:
  caddy:
    external: true
