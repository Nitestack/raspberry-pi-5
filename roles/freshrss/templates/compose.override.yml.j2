services:
  freshrss:
    image: freshrss/freshrss:1.27.0@sha256:2b53d2708fc755aab499a96e865be5ae6deeafb99e855e235e8870b4013c56cd
    container_name: "{{ services.freshrss.container_name }}"
    restart: always
    networks:
      - caddy
    volumes:
      - "{{ freshrss_data_dir }}/data:/var/www/FreshRSS/data"
      - "{{ freshrss_data_dir }}/extensions:/var/www/FreshRSS/extensions"
    environment:
      TZ: "{{ timezone }}"
      CRON_MIN: "3,33"
      TRUSTED_PROXY: !reset null

networks:
  caddy:
    external: true
