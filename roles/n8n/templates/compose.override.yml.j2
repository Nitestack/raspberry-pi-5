services:
  caddy: !reset null

  n8n:
    image: docker.n8n.io/n8nio/n8n:1.113.3@sha256:57f95a26b1b28527053fba6316d9d046395d9b4da9d0da486e838384a38fcf37
    container_name: "{{ services.n8n.container_name }}"
    ports: !reset []
    user: "0"
    networks:
      - caddy
    environment:
      - N8N_HOST={{ services.n8n.domain }}
      - WEBHOOK_URL=https://{{ services.n8n.domain }}/
      - GENERIC_TIMEZONE={{ timezone }}
    volumes:
      - "{{ n8n_data_dir }}/data:/home/node/.n8n"
      - "{{ n8n_data_dir }}/files:/files"

networks:
  caddy:
    external: true
