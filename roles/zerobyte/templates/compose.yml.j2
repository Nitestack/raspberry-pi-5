services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.24.2@sha256:1b1547152a6d1849cc1f375c845ad127fc595c71cc212d8672c4ea65583fcf73
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    environment:
      TZ: "{{ timezone }}"
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
