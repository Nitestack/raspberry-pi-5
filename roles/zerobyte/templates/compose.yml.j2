services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.14.0@sha256:e2e1cee7602f91659da79ef10f8eb36c97935447619b523f8ddc8c03ce410ae5
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    cap_add:
      - SYS_ADMIN
    devices:
      - /dev/fuse:/dev/fuse
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
