services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.29.1@sha256:9578d0a8b16def1e1e76defd475a0601fbd603ffe7c46e9fff7d56774951372d
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    environment:
      TZ: "{{ timezone }}"
      BASE_URL: "https://{{ services.zerobyte.domain }}"
      APP_SECRET: "{{ zerobyte_app_secret }}"
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
