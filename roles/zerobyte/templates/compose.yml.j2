services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.29.2@sha256:4814a3bd8b0ae038a0948659784edc06b6deb00d8ca605bc8dba93a35d6aedca
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    environment:
      TZ: "{{ timezone }}"
      BASE_URL: "https://{{ services.zerobyte.domain }}"
      APP_SECRET: "{{ zerobyte_app_secret }}"
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
