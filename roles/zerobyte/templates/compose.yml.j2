services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.16.0@sha256:562b2d3d61f1afb70a27df7519904a062cf28e79ffbbd46631fa2d499e5d38ca
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    cap_add:
      - SYS_ADMIN
    devices:
      - /dev/fuse:/dev/fuse
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
