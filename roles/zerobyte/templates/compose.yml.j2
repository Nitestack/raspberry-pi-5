services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.17.0@sha256:f821b7ceb1ce98b50bf4d7ed8383a1ecb81990c83d2e6a85f21d7a7cfe1af7eb
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    cap_add:
      - SYS_ADMIN
    devices:
      - /dev/fuse:/dev/fuse
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
