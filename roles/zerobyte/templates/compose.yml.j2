services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.18.4@sha256:a25294f910f3b70f89bfa80722820900f583a9e82e360f4fee198ef4d155e445
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    cap_add:
      - SYS_ADMIN
    devices:
      - /dev/fuse:/dev/fuse
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
