services:
  zerobyte:
    image: ghcr.io/nicotsx/zerobyte:v0.22.0@sha256:d04176e96a569b48511959a4fd21bf86c87783b1b95a4013e04acf468842d7f7
    container_name: "{{ services.zerobyte.container_name }}"
    restart: always
    networks:
      - caddy
    cap_add:
      - SYS_ADMIN
    devices:
      - /dev/fuse:/dev/fuse
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ zerobyte_data_dir }}/data:/var/lib/zerobyte"
      - "/root/.config/rclone:/root/.config/rclone"
      - "{{ backup_base_dir }}:{{ backup_base_dir }}"

networks:
  caddy:
    external: true
